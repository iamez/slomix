# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files with LF line endings
*.py text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.sh text eol=lf
*.lua text eol=lf
*.sql text eol=lf

# Declare files that should remain CRLF
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.db binary
*.sqlite binary
*.pyc binary
