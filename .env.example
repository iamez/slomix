# ===============================================
# ET:Legacy Discord Bot - Configuration Template
# ===============================================
# Copy this file to .env and fill in your values

# ==================
# REQUIRED SETTINGS
# ==================

# Discord Bot Token (Get from: https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_bot_token_here

# Your Discord Server ID
GUILD_ID=your_server_id_here

# Channel where stats will be posted
STATS_CHANNEL_ID=your_channel_id_here

# ==================
# DATABASE SETTINGS
# ==================
# Local database (single workstation):
# DATABASE_PATH=bot/etlegacy_production.db

# Network database (shared across workstations):
DATABASE_PATH=Z:\\etlegacy_bot\\etlegacy_production.db

# Alternative UNC path (if Z: drive not mapped):
# DATABASE_PATH=\\\\192.168.64.116\\stats\\etlegacy_bot\\etlegacy_production.db

# ==================
# OPTIONAL: SSH Monitoring
# ==================
# Enable automatic stats downloading from game server

SSH_ENABLED=false
SSH_HOST=your.server.com
SSH_PORT=22
SSH_USER=username
SSH_KEY_PATH=~/.ssh/id_rsa
REMOTE_STATS_DIR=/path/to/gamestats
SSH_CHECK_INTERVAL=30

# ==================
# OPTIONAL: Voice Channel Automation
# ==================
# Auto-start monitoring when players join voice

AUTOMATION_ENABLED=false
GAMING_VOICE_CHANNELS=channel_id1,channel_id2
ACTIVE_PLAYER_THRESHOLD=6
SESSION_START_THRESHOLD=6
SESSION_END_THRESHOLD=2
INACTIVE_DURATION_SECONDS=180
SESSION_END_DELAY=180

# ==================
# OPTIONAL: RCON (Server Control)
# ==================
# Enable remote server management commands

RCON_ENABLED=false
RCON_HOST=your_game_server_ip
RCON_PORT=27960
RCON_PASSWORD=your_rcon_password

# Admin Channel (restrict server commands to this channel)
ADMIN_CHANNEL_ID=

# ==================
# BOT BEHAVIOR
# ==================
AUTO_SESSION_TIMEOUT=30
RATE_LIMIT_MESSAGES=2.0
RATE_LIMIT_EMBEDS=3.0

# File Paths
STATS_DIRECTORY=./local_stats

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/discord_bot.log
