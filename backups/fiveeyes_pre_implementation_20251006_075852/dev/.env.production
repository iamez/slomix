# Production ET:Legacy Discord Bot Configuration
# Copy this to .env in your stats directory

# Discord Bot Token (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# SSH Configuration for Game Server Monitoring
SSH_HOST=puran
SSH_USER=et
SSH_KEY_PATH=/path/to/your/ssh/private/key
# Alternative: leave SSH_KEY_PATH empty to use SSH agent or password auth

# Admin Discord User IDs (comma-separated)
# These users can use !start_monitoring and !stop_monitoring commands
ADMIN_DISCORD_IDS=231165917604741121,your_admin_id_here

# Monitoring Configuration
MONITOR_INTERVAL_MINUTES=5
REMOTE_STATS_PATH=/home/et/.etlegacy/legacy/gamestats

# Database Configuration  
DB_PATH=dev/etlegacy_comprehensive.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO